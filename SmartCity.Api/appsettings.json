{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "context": "Data Source=.;Initial Catalog=SmartCity;Integrated Security=True;Encrypt=False;Trust Server Certificate=True"
  },
  "jwtSettings": {
    "Secret": "SecretKeyForJwtTokenSmartCityProject",
    "Issuer": "SmartCity",
    "Audience": "SmartCityUsers",
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateLifeTime": true,
    "ValidateIssuerSigningKey": true,
    "AccessTokenExpireDate": 30,
    "RefreshTokenExpireDate": 60
  },

  "AIService": {
    "BaseUrl": "http://localhost:5000",
    "Timeout": 30,
    "RetryCount": 3,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDuration": 60,
    "MinimumConfidence": 0.5,
    "EnableImageDetection": true,
    "EnableTextClassification": true
  }



}
